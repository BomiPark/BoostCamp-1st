<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="8dp"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#dcdee3"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/who"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/text"
            android:ems="10"
            android:textColor="#424242"
            android:textSize="13sp"
            android:id="@+id/editText"
            android:layout_weight="4" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:srcCompat="@drawable/detail8"
            android:id="@+id/check"
            android:layout_gravity="center"
            android:layout_weight="1" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_centerInParent="true"
        android:background="@color/gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/prop"
            android:id="@+id/propImg"
            android:layout_weight="0.91" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/laytout1"
            android:layout_weight="7">


            <TextView
                android:text="부스트캠프-boostcamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:textColor="@color/black"
                android:id="@+id/name" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="5월 31일 오후4:56 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:id="@+id/date"
                     />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_marginLeft="3dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/detail5"
                    android:id="@+id/imageView2"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:text="@string/content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/content1"
        android:id="@+id/contentImg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="3dp">

        <ImageView
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:src="@drawable/detail1"
            android:id="@+id/imageView5"
            android:layout_weight="1" />

        <TextView
            android:text="댓글 3,224개 공유 163회"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reply"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="3,224"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/like"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imageView5" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.9dp"
        android:layout_centerInParent="true"
        android:background="@color/gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn1"
            android:background="@drawable/detail2"
            android:layout_weight="1" />

        <Button
            android:background="@drawable/detail3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn2"
            android:layout_weight="1" />

        <Button
            android:background="@drawable/detail4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn3"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>